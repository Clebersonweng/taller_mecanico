<div class="modal-header">
	<h3>Delete Brand</h3>
</div>
<div class="modal-body">
	<ul class="errors"></ul>
	Are you sure you wish to delete?&nbsp<b><%= @brand.brand %></b>
</div>
<div class="modal-footer">
	<div class="span6 offset2">
		<%= link_to "Yes, Delete", brand_path(@brand), method: :delete, remote: true, class: "btn btn-danger" %>
		<%= link_to "No, Please Don't", "#", class: "btn", data: { dismiss: "modal" } %>
	</div>
</div>