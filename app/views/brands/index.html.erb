<fieldset>
  <div class="pull-right">  
    <%= form_tag(brands_path, :method => "get",class:"form-search", id: "search-form") do  %>
    <div class="input-append">  
     <%= text_field_tag :search, params[:search],class:"span7 search-query", placeholder: "Search Brands" %>
     <button type="submit" class="btn  btn-success ">Search</button>
   </div>
   <% end %>
 </div>
 <legend>
  <h2>Listing brands</h2>
</legend>

<table class="table table-striped table table-hover">
 <thead>
    <tr>
      <th style="text-align: center">Brand</th>
      <th style="text-align: center">Description</th>
      <th style="text-align: center"></th>
    </tr>
  </thead>

   <tbody class="product-index">
      <%= render "index" %>
    </tbody>
</table>
</fieldset>
<br>
<div id="product-modal" class="modal hide fade"></div>
