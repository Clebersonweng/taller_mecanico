<fieldset><legend>Listing states</legend>
  
   <div class="pull-right">  
      <%= form_tag(vehicles_path, :method => "get",class:"form-search", id: "search-form") do  %>
      <div class="input-append">  
         <%= text_field_tag :search, params[:search],class:"span7 search-query", placeholder: "Search Vehicles" %>
         <button type="submit" class="btn  btn-success ">Search</button>
     </div>
     <% end %>
  </div>
<table class="table table-striped table table-hover">
 <thead>
    <tr>
      <th style="text-align: center">Status</th>
      <th style="text-align: center">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td style="text-align: center"><%= state.status %></td>
        <td style="text-align: center"><%= state.description %></td>
        <td style="text-align: center"><%= link_to image_tag("/assets/pencil.ico",height: '20', width: '20'),  edit_state_path(state) %>
         <%= link_to image_tag("/assets/delete.ico",height: '20', width: '20'),  { :action => :destroy, :id => state.id }, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
